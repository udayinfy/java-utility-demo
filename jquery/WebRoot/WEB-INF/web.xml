<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>EncodeServlet</servlet-name>
		<servlet-class>com.jquery.EncodeServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AjaxServlet</servlet-name>
		<servlet-class>com.jquery.AjaxServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AjaxXmlServlet</servlet-name>
		<servlet-class>com.jquery.AjaxXmlServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>EncodeServlet</servlet-name>
		<url-pattern>/encodeServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AjaxServlet</servlet-name>
		<url-pattern>/ajaxServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AjaxXmlServlet</servlet-name>
		<url-pattern>/ajaxXmlServlet</url-pattern>
	</servlet-mapping>

</web-app>
